<p id="notice"><%= notice %></p>

<h1>Listing Order Items</h1>

<table>
  <thead>
    <tr>
      <th>Menu item</th>
      <th>Order</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @order_items.each do |order_item| %>
      <tr>
        <td><%= order_item.menu_items %></td>
        <td><%= order_item.order %></td>
        <td><%= link_to 'Show', profile_order_order_item_path(@profile, @order, order_item) %></td>
        <td><%= link_to 'Edit', edit_profile_order_order_item_path(@profile, @order, order_item) %></td>
        <td><%= link_to 'Destroy', profile_order_order_item_path(@profile, @order, order_item), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>


<%= link_to 'New Order item', new_profile_order_order_item_path(@profile, @order) %>
<%= link_to 'Back', profile_order_path(@profile, @order) %>
