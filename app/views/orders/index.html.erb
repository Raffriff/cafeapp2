<p id="notice"><%= notice %></p>

<h1>Listing Orders for <%=@profile.firstname%></h1>

<table>
  <thead>
    <tr>
      <th>Pickuptime</th>
      <th>Totalprice</th>
      <th>Profile</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.pickUpTime %></td>
        <td><%= order.totalPrice %></td>
        <td><%= order.profile %></td>
        <td><%= link_to 'Show', profile_order_path(@profile, order) %></td>
        <td><%= link_to 'Edit', edit_profile_order_path(@profile, order) %></td>
        <td><%= link_to 'Destroy', profile_order_path(@profile, order), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Order', new_profile_order_path(@profile, @orders) %>
<%= link_to 'Back to Profile', @profile %>
